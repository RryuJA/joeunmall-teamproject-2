		List<InquiryVO> inquiryList = new ArrayList<>();
		InquiryVO inquiryVO;
		
		for(int i=0; i<50; i++) {
			inquiryVO = new InquiryVO();
			
			inquiryVO.setInquiryIndex(makeInquiryIndex());
			
			log.info(inquiryVO.getInquiryIndex());
			
			//inquiryList.add(inquiryVO);
		}
		
